    main
      .acceuil
        #slideshow
           Slideshow container
          .slideshow-container
             Full-width images with number and caption text
            .mySlides.fade
              .numbertext 1  3
              img(src='imagescaptureLeMonde.PNG', style='width100%')
              .text Capture d'écran
            .mySlides.fade
              .numbertext 2  3
              img(src='imagesLogoIUT-2011.jpg', style='width100%')
              .text Logo IUT
            .mySlides.fade
              .numbertext 3  3
              img(src='imagesScreenshotLeMonde.png', style='width100%')
              .text Capture d'écran
             Next and previous buttons
            a.prev(onclick='plusSlides(-1)') ❮
            a.next(onclick='plusSlides(1)') ❯
          br
           The dotscircles
          div(style='text-aligncenter')
            span.dot(onclick='currentSlide(1)')
            span.dot(onclick='currentSlide(2)')
            span.dot(onclick='currentSlide(3)')
        script(type='textjavascript', src='scriptsslideshow.js')
