doctype html
html(lang="fr")
  head
    meta(charset="utf-8")
    |     
    meta(name="viewport", content="width=device-width, initial-scale=1")
    |     
    title Wib - Fiche
    |     
    link(rel="stylesheet", href="/stylesheets/fiche.css")
    |     
    link(rel="icon", type="image/png", href="../images/icon_ext.png")
  body
   include ../public/template/header
    main
    div(id='fiche')
      form(action="", method="POST")
        fieldset(class='informationSite')
          legend Information du site:
          |                 
          |                 
          div
            p Lien:
            |                     
            input(name="url", type="url", placeholder="Ex: LeMonde.fr")

          br
          div
            p Description
            textarea(name="description",class ='description')
          |                 
          div
            p Catégorie:
            |  
            |                     
            select(name="typ")
              if (typeof type === "undefined")
                  td
              else
                each t in type
                  option(value="#{t}") #{t}
          div
            p Sujet:
            input(type='text', name='subject')
        br
        fieldset(class='questionnaire')
          legend Questionnaire détaillé
          |                 
          div(class="avis")
            div(class="titreetetoile")
              p Cohérence de l'écriture:
              input(type="hidden",id='coherence', name='coherence')
              |                         
              div(class="rating rating2")
                //
                a(href="#5", title="Give 5 stars",onclick='myFunction5()') ★

                  script.
                      function myFunction5() {
                          var e = document.getElementById("coherence").value = 5;
                      }

                a(href="#4", title="Give 4 stars",onclick='myFunction4()') ★

